<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ca.gbc.mobile.ianpadilla.research_monster.Profile"
    android:background="#ff27ed3d">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="100834932"
        android:id="@+id/student_id_label"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ian.padilla.b@gmail.com"
        android:id="@+id/email_label"
        android:layout_below="@+id/student_id_label"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Computer Programmer"
        android:id="@+id/summary_label"
        android:layout_below="@+id/email_label"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ian"
        android:id="@+id/firstName_label"
        android:layout_below="@+id/summary_label"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Padilla"
        android:id="@+id/lastName_label"
        android:layout_below="@+id/firstName_label"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View All Projects"
        android:id="@+id/viewAll_Button"
        android:layout_below="@+id/experience_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="experience"
        android:id="@+id/experience_label"
        android:layout_below="@+id/lastName_label"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/ic_launcher"
        android:layout_above="@+id/student_id_label"
        android:layout_alignLeft="@+id/viewAll_Button"
        android:layout_alignStart="@+id/viewAll_Button"
        android:layout_alignRight="@+id/viewAll_Button"
        android:layout_alignEnd="@+id/viewAll_Button"
        android:layout_alignParentTop="true" />

</RelativeLayout>
