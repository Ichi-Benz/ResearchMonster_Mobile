<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".SignInapp"
    android:background="@drawable/Foundation_RGB_400">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Research Monster"
        android:id="@+id/RM_label"
        android:layout_marginTop="52dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#ff000000"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/login_button"
        android:layout_alignStart="@+id/login_button" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Enter Student ID"
        android:ems="10"
        android:id="@+id/student_id"
        android:layout_marginTop="83dp"
        android:layout_below="@+id/RM_label"
        android:editable="true"
        android:layout_alignRight="@+id/RM_label"
        android:layout_alignEnd="@+id/RM_label"
        android:layout_alignLeft="@+id/login_button"
        android:layout_alignStart="@+id/login_button" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:password="false"
        android:editable="true"
        android:hint="Enter Password"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/student_id"
        android:layout_alignStart="@+id/student_id"
        android:layout_alignRight="@+id/student_id"
        android:layout_alignEnd="@+id/student_id" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:id="@+id/login_button"
        android:layout_below="@+id/password"
        android:layout_marginTop="50dp"
        android:textSize="18dp"
        android:layout_marginRight="27dp"
        android:background="@drawable/rounded_item"
        android:layout_marginLeft="55dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/errorText"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/login_button"
        android:layout_centerHorizontal="true"
        android:textColor="#ffff0200"
        android:layout_marginLeft="40dp" />
</RelativeLayout>
